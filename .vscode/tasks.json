{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "build",
            "type": "shell",
            "command": "scripts\\build.bat",
            "presentation": {
                "reveal": "always",
                "focus": true
            },
            "args": [
                "${fileDirname}", "${fileBasename}", "${fileBasenameNoExtension}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}